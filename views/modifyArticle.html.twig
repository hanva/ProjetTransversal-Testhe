{% extends 'layout.html.twig' %}

{% block page_title %}Cool Framework{% endblock %}

{% block style %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet" type="text/css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.25.0/codemirror.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/2.7.6/css/froala_editor.pkgd.min.css" rel="stylesheet" type="text/css"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/froala-editor/2.7.6/css/froala_style.min.css" rel="stylesheet" type="text/css"/>
{% endblock %}
{% block content %}
    <form action="?action=modifyArticle" method="POST" name="articleform" enctype="multipart/form-data">
        <input type="type" hidden="hidden" value="{{article_id}}" name="article_id">
        <label for="title">Title</label>
        <input type="text" name="title" value="{{posts.title}}" id="title">
        <select name="select" id="monselect">
            <option value="valeur1">Valeur 1</option>
            <option value="valeur2" selected="selected">Valeur 2</option>
            <option value="valeur3">Valeur 3</option>
        </select>
        <input type="file" accept=".jpg, .jpeg, .png" id="picture" name="picture">
        <label for="content">Contenu</label>
        <textarea name="content" rows="10" cols="50">
            {{posts.content}}
        </textarea>
        <button type="submit">Post</button>
    </form>
{% endblock %}
{% block script %}
    <script src="./node_modules/froala-editor/js/froala_editor.min.js"></script>
    <script src="assets/script/addArticle.js"></script>
{% endblock %}